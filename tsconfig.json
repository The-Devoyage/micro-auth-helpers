{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src",
    "src/types/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
